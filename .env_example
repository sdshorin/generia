# Service
SERVICE_NAME=api-gateway
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8080

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=generia
DB_SSL_MODE=disable

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=24h

# Service Discovery
CONSUL_ADDRESS=consul:8500

# OpenTelemetry (replacing Jaeger)
OTLP_ENDPOINT=jaeger:4318
TELEMETRY_SERVICE_NAME=
TELEMETRY_ENVIRONMENT=production
TELEMETRY_SAMPLING_RATIO=1.0
TELEMETRY_PROPAGATOR=w3c
TELEMETRY_DISABLE_METRICS=false
TELEMETRY_DISABLE_TRACING=false

# Redis
REDIS_ADDRESS=redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# MongoDB
MONGODB_URI=mongodb://admin:password@mongodb:27017
MONGODB_DATABASE=generia_interactions

# MinIO
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=generia-images
MINIO_USE_SSL=false

# Kafka
KAFKA_BROKERS=kafka:9092

# CDN
CDN_DOMAIN=localhost
CDN_DEFAULT_TTL=86400
CDN_SIGNING_KEY=your_cdn_signing_key